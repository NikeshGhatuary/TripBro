<script id="couponBannerTpl" type="text/template">
  {{if(myModel.length<=0){}}
    <div class="no-list-content">
      <img src="//img.happyeasygo.com/www/static/img/3b56fc308c4de8f7dc2bb8f2e1664a19.png" alt="">
      <p>Amazing Coupons are coming soon</p>
    </div>
  {{ } else { }}
  {{ _.each(myModel,function(val,i){ }}
    <li class="swiper-slide" data-index="{{= i}}">
      <a href="{{= val.href}}" target="_blank" class="GAAD"  ga="HomepageCoupon-{{=val.title}}">
        <div class="item">
          <div class="item-left">
            <div class="js-coupon-img" style="position:relative;width:100px;height:100px">
              <img class="item-left-img" src="{{= val.url}}" alt="">
              {{ if(val.countDownDate){ }}
                <span class="coupon-time js-coupon-time">{{= val.countDownDate}}</span>
              {{ } }}
            </div>
            {{ if(val.businessType==1){ }}
              <p class="coupon-type flight-color">
                <span class="couponType">{{= val.couponTypeName }}</span>
              </p>
            {{ }else if(val.businessType==2){ }}
              <p class="coupon-type hotel-color">
                <span class="couponType">{{= val.couponTypeName }}</span>
              </p>
            {{ }else if(val.businessType==3){ }}
              <p class="coupon-type flightHotel-color">
                <span class="couponType">{{= val.couponTypeName }}</span>
              </p>
            {{ } }}
          </div>
          <div class="item-right">
            <h2 class="title">{{=val.title}}</h2>
            <p class="decredition">{{=val.alt}}</p>
            <div class="book">BOOK NOW <i class="iconfont iconfuzhi"></i></div>
          </div>
        </div>
      </a>
    </li>
  {{ })} }} 
  
</script>
